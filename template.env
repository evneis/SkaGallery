# Discord Bot Token (Required)
# Get this from Discord Developer Portal
DISCORD_TOKEN=your_bot_token_here

# Discord Application/Client ID (Required)
# Get this from Discord Developer Portal
CLIENT_ID=your_client_id_here

# Discord Guild ID (Server ID) (Required)
# Right-click on your server and click "Copy ID"
GUILD_ID=your_guild_id_here

# Gallery Channel ID (Required)
# Right-click on your channel and click "Copy ID"
GALLERY_CHANNEL_ID=your_channel_id_here

# Storage Directory (Optional)
# Defaults to ./images if not specified
STORAGE_DIR=./images

# Firebase Configuration (Required for Firebase storage)
# Get these from your Firebase project settings
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id 